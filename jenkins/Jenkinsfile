            {
                        
            }
            stage('Build') {
                    echo 'SCM....'
                    git credentialsId: 'tom.halpin@dxc.com', url: 'https://github.com/tom-halpin/AnsibleCICD'

                    echo 'Building....'

                   //bat '"C:\\Program Files\\Git\\usr\\bin\\ssh.exe" liuning0820@13.75.117.74 mv *.* /mnt/DockerDemoASPNetCore/ '
                    

                }
   
            stage('Test') {
                echo 'Testing'....'
                sh 'USER root'
                echo 'Installing pip into job workspace ...'
                sh 'apt-get install python-pip'
                echo 'Installing ansible-lint into job workspace ...'
                sh 'pip2 install ansible-lint'
                sh 'USER jenkins'
                echo 'Running ansible-lint ...'
                //command to run ansible-lint the parameter required is the path where the playbooks are stored
                sh 'ansible-lint  /ansible'
            }
            stage('Deploy') {
                echo 'Deploying....'
            }

}
